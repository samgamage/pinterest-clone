#post_show.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading.post_image
        = image_tag @post.image.url
      .panel-body
        %h1= @post.title
        %p.description= @post.description
        %p
        Submitted by
        = @post.user.email
      .panel-footer
        .row
          .col-md-6
            %p.user
            Submitted by
            = @post.user.email
          .col-md-6
            .btn-group.pull-right
              = link_to like_post_path(@post), method: :put, class: "btn btn-default" do
                %span.glyphicon.glyphicon-heart
                  =@post.get_upvotes.size
              = link_to "Edit", edit_post_path, class: "btn btn-default"
              = link_to "Delete", post_path, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-default"
